{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "lib": ["es2017", "es6", "es5", "DOM"],
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": ["index.ts", "node-compat.ts", "icc-api/*", "icc-x-api/**/*", "icc-api/**/*", "icc-x-api/**/*"],
  "exclude": ["node_modules"]
}
